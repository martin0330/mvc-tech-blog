<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <br>
        <span> Posted by: {{user.username}}</span>
        <br>
        <span>Description: {{post_body}}</span>
    </div>
    <div class="meta">
        {{vote_count}} {{format_plural "Like" vote_count}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>